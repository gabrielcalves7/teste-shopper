{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2020",
      "ES2021.String"
    ],
    "resolveJsonModule": true
  },
  "exclude": [
    "__tests__"
  ]
}
